<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('partials/head', {title: 'registrate'}) %>
<!-- /Head -->
    <body>
    <!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
    
    <!-- Form -->
    <main class="register">
        <form action="/" method="POST">
            <label for="name" class="form-label">Nombre y Apellido:</label>
            <input type="text" name="name">
            <label for="user" class="form-label">Nombre De Usuario</label>
            <input type="text" name="user">
            <label for="email" class="form-label">E-mail:</label>
            <input type="email" name="email">
            <br>
            <label for="birth_date" class="form-label"><b>Fecha de nacimiento</b></label>
            <br>
            <input type="date" name="birth_date" id="birth_date">
            <br>
            <input type="text" name="addres" placeholder="Domicilio">
            <h2>Perfil Del Usuario</h2>
            <div class="profile">
                <input type="radio" name="profile" value="buy" id="buy">
                <label for="buy" class="form-label">Comprador</label>
                <input type="radio" name="profile" value="sell" id="sell">
                <label for="sell" class="form-label">Vendedor</label>
            </div>
            <h4>Intereses</h4>
            <div class="interests">
                <div>
                    <input type="checkbox" name="interests" value="a" id="a">
                    <label for="a" class="form-label">Electro</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="b" id="b">
                    <label for="b" class="form-label">Moda</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="c" id="c">
                    <label for="c" class="form-label">Hogar</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="d" id="d">
                    <label for="d" class="form-label">Juguetería</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="e" id="e">
                    <label for="e" class="form-label">Vida sana</label>
                </div>
            </div>
            <h4>Elegí tu foto de usuario</h4>
            <input type="file" name="avatar">
            <br>
            <br>
            <input type="password" name="pass" placeholder="Elegí tu contraseña">
            <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña">
            <br>
            <br>
            <input type="submit" value="Enviar">
            <input type="reset" value="Borrar">
            <br>
            <br>
        </form>
    </main>
    <!-- /Form -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
    </body>
</html>